<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Create User" Height="35" Width="150" Margin="0,0,0,10" FontSize="15" FontFamily="Arial" BorderThickness="0,0,0,0" Click="Button_Click" ></Button>
        <Button Content="Show all Users" Height="35" Width="150" Margin="0,0,0,10" FontFamily="Arial" FontSize="15" BorderThickness="0,0,0,0" Click="Button_Click_2"></Button>
        <Button Content="Exit" Height="35" Width="150" FontFamily="Arial" FontSize="15" BorderThickness="0,0,0,0" Margin="0,0,0,10" Click="Button_Click_1"></Button>
        

    </StackPanel>
</Window>
